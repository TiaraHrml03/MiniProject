<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".home">

    <LinearLayout
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Software Engineering"
            android:textSize="30dp"
            android:textColor="@color/teal_700" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_ingfo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:backgroundTint="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/informasi" />

            <ImageButton
                android:id="@+id/btn_dosen"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:backgroundTint="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/dosen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_matkul"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:backgroundTint="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/matkul" />

            <ImageButton
                android:id="@+id/btn_kelas"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:backgroundTint="@color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/kelas" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>